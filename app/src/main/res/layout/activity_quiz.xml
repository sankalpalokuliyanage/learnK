<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <!-- 읽기 (Read) Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- You can customize the button content here, e.g., an icon and text -->
            <ImageView
                android:id="@+id/imageViewRead"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_read"
                android:layout_centerHorizontal="true"
                android:contentDescription="Read Icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewRead"
                android:text="읽기"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- 듣기 (Listen) Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Customize the button content here -->
            <ImageView
                android:id="@+id/imageViewListen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_listen"
                android:layout_centerHorizontal="true"
                android:contentDescription="Listen Icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewListen"
                android:text="듣기"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- 쓰기 (Write) Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Customize the button content here -->
            <ImageView
                android:id="@+id/imageViewWrite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_write"
                android:layout_centerHorizontal="true"
                android:contentDescription="Write Icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewWrite"
                android:text="쓰기"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
